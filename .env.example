# Auth.js / Steam
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-me
# Optional Auth.js aliases (supported as fallback by this app)
AUTH_URL=http://localhost:3000
AUTH_SECRET=change-me
# In Vercel preview deployments, the app can fallback to a derived secret if missing.
# Still recommended: set NEXTAUTH_SECRET/AUTH_SECRET explicitly for every environment.
# Optional but recommended for Steam display name/avatar enrichment
STEAM_API_KEY=your-steam-web-api-key

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Server-side Supabase write access (for steam_profiles upsert)
# Preferred:
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# Optional fallback used by existing code:
SUPABASE_SECRET_KEY=your-server-secret-key

# Existing app envs (if already used in your setup)
SUPABASE_URL=https://your-project-ref.supabase.co
